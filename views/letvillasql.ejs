        <form accept-charset="UTF-8" id="uploadForm" ref="uploadForm" action="/letvillasql" method="post" enctype="multipart/form-data">
    
    
            
            <div class="item">
                
                <label for="name">Name:</label>
                <input name="name" type="text" placeholder="Please enter of the Villa", required />
                
