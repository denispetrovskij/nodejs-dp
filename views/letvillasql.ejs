                <input name="price" type="number" placeholder="Please enter price", pattern="[0-9]", title='Only Numbers accepted', required />

                <label for="city">City:</label>
                <input name="city" type="text" placeholder="Please enter city", required />
                
                <label for="description">Description:</label>
                <input name="description" type="text" placeholder="Please enter description", required />
                
                <label for="image">Image:</label>
                <input class="button" type="file" name="sampleFile", required/>
                
                <button class="button">Add Villa</button>
                
            </div>
            
            
            
            
        </form>
        
        
